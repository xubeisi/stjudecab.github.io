  year = {2021},
  month = jun,
  abbr = {J. Exp. Med.},
  journal = {Journal of Experimental Medicine},
  volume = {218},
  number = {e20202415},
  issn = {0022-1007},
  doi = {10.1084/jem.20202415},
  abstract = {T reg cells bearing a diverse antigen receptor repertoire suppress pathogenic T cells and maintain immune homeostasis during their long lifespan. How their robust function is determined genetically remains elusive. Here, we investigate the regulatory space of the cis-regulatory elements of T reg lineage\textendash specifying factor Foxp3. Foxp3 enhancers are known as distinct readers of environmental cues controlling T reg cell induction or lineage stability. However, their single deficiencies cause mild, if any, immune dysregulation, leaving the key transcriptional mechanisms determining Foxp3 expression and thereby T reg cell suppressive capacity uncertain. We examined the collective activities of Foxp3 enhancers and found that they coordinate to maximize T reg cell induction, Foxp3 expression level, or lineage stability through distinct modes and that ablation of synergistic enhancers leads to lethal autoimmunity in young mice. Thus, the induction and maintenance of a diverse, stable T reg cell repertoire rely on combinatorial Foxp3 enhancers, suggesting broad, stage-specific, synergistic activities of cell-intrinsic factors and cell-extrinsic cues in determining T reg cell suppressive capacity.},
  geoid = {GSE158223,Mouse\_WGBS.CutRun.ATAC.TCR.CaptureC},
  pmcid = {PMC8185987},
  pmid = {34086055},
  file = {C\:\\Users\\bxu2\\Zotero\\storage\\DITCZZZF\\Zong et al. - 2021 - Foxp3 enhancers synergize to maximize regulatory T.pdf;C\:\\Users\\bxu2\\Zotero\\storage\\JGSFWLZD\\Foxp3-enhancers-synergize-to-maximize-regulatory-T.html}
}

