@article{2021_NatCommun_doto,
  title = {{{KDM6B}} Promotes Activation of the Oncogenic {{CDK4}}/6-{{pRB-E2F}} Pathway by Maintaining Enhancer Activity in {{MYCN-amplified}} Neuroblastoma},
